---
const { pathname } = Astro.url

console.log(pathname)

const link = {
  title: pathname === '/' ? 'tips' : 'home',
  path: pathname === '/' ? '/tips' : '/',
}
---

<header class="z-50 inset-0">
  <nav
    class="flex items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <svg
        width="48"
        height="48"
        viewBox="0 0 48 48"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <rect width="48" height="48" rx="8" fill="#4F46E5"></rect>
        <path d="M24 16V32L32 24L24 16Z" fill="white"></path>
        <path d="M16 16H24V24H16V16Z" fill="#D4D4F5"></path>
        <path d="M24 24H32V32H24V24Z" fill="#D4D4F5"></path>
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M16 24H24V32H16V24ZM24 16H32V24H24V16Z"
          fill="#9CA3AF"></path>
      </svg>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a
        href={link.path}
        class="text-sm font-semibold leading-6 text-white hover:text-gray-200"
      >
        {link.title}
        <span aria-hidden="true">&rarr;</span></a
      >
    </div>
  </nav>
</header>
